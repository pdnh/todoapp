{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],                  // Semikolons erzwingen
    "quotes": ["error", "single"],               // Einfache Anführungszeichen
    "no-console": "warn",                        // Warnung bei console.log
    "indent": ["error", 2],                       // 2 Leerzeichen Einrückung
    "comma-dangle": ["error", "never"]           // Keine trailing commas
  }
}

